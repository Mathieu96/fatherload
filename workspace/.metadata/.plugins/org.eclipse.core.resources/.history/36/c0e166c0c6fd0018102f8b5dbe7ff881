#include <nds.h>
#include <stdio.h>
#include "graphics_main.h"


int main(void) {
	init_background3();
	int x = 0; int y = 0;
	u16 keys;
    while(1){
    	scanKeys();
    	keys = keysHeld();
    	if((keys & KEY_DOWN) && (y < 512 - 192))
    		y++;
    	if((keys & KEY_UP) && (y > 0))
    		y--;
    	if((keys & KEY_RIGHT) && (x < 512 - 256))
    		x++;
    	if((keys & KEY_LEFT) && (x > 0))
    		x--;
		//shifting horizontally from left to right
/*		for(i=0; i<=512-256; i++){
			swiWaitForVBlank();
			REG_BG0HOFS = i;
		}
		//shifting vertically from up to down
		for(i=0; i<=512-192; i++){
			swiWaitForVBlank();
			REG_BG0VOFS = i;
		}
		//shifting horizontally from right to left
		for(i=512-256; i>=0; i--){
			swiWaitForVBlank();
			REG_BG0HOFS = i;
		}
		//shifting vertically from down to up
		for(i=512-192; i>=0; i--){
			swiWaitForVBlank();
			REG_BG0VOFS = i;
		}
*/
    }
}
