#include "graphics_sub.h"

void init_sub_background(){
	REG_DISPCNT_SUB = MODE_5_2D | DISPLAY_BG3_ACTIVE;
	VRAM_C_CR = VRAM_ENABLE | VRAM_C_SUB_BG;

	// Init BG0
	BGCTRL_SUB[0] = BG_COLOR_16 | BG_MAP_BASE(0) | BG_TILE_BASE(1) | BG_32x32;

	dmaCopy(controls_rightPal, BG_PALETTE_SUB, controls_rightPalLen);
	dmaCopy(controlsBitmap, BG_TILE_RAM_SUB(1), controls_rightBitmapLen);

    // Set up affine matrix
    REG_BG3PA_SUB = 256;
    REG_BG3PC_SUB = 0;
    REG_BG3PB_SUB = 0;
    REG_BG3PD_SUB = 256;
}
