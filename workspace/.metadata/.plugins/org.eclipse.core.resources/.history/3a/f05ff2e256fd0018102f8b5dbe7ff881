void init_background3(){
	VRAM_A_CR = VRAM_ENABLE | VRAM_A_MAIN_BG;
	REG_DISPCNT = MODE_5_2D | DISPLAY_BG0_ACTIVE;
	BGCTRL[0] = BG_COLOR_256 | BG_MAP_BASE(0) | BG_TILE_BASE(1) | BG_64x32;
	swiCopy(backgroundTiles, BG_TILE_RAM(1), backgroundTilesLen/2);
	dmaCopy(backgroundPal, BG_PALETTE, backgroundPalLen);
//	BG_PALETTE[254] = ARGB16(1,0,0,0);
//	BG_PALETTE[255] = ARGB16(1,0,0,0);
	int i;
	for(i=0; i<19; i++){
		dmaCopy(&backgroundMap[i*64], &BG_MAP_RAM(0)[i*32], 64);
		dmaCopy(&backgroundMap[i*64+32], &BG_MAP_RAM(1)[i*32], 64);
	}

/*	for(i=19; i<32; i++){
		dmaCopy(dirtTile, &BG_MAP_RAM(0)[i*32], 64);
		dmaCopy(dirtTile, &BG_MAP_RAM(1)[i*32], 64);
	}*/
}
