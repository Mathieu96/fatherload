#include "graphics_main.h"

void init_background3(){
	VRAM_A_CR = VRAM_ENABLE | VRAM_A_MAIN_BG;
	REG_DISPCNT = MODE_5_2D | DISPLAY_BG3_ACTIVE;
	BGCTRL[3] = BG_MAP_BASE(0) | BgSize_B8_512x256;
	bgTransform[3]->xdx = 256;
	bgTransform[3]->ydx = 0;
	bgTransform[3]->xdy = 0;
	bgTransform[3]->ydy = 256;
	bgTransform[3]->dx = 256;
	bgTransform[3]->dy = 0;
	dmaCopy(backgroundBitmap, BG_MAP_RAM(0), backgroundBitmapLen);
	dmaCopy(backgroundPal, BG_PALETTE, backgroundPalLen);
}
