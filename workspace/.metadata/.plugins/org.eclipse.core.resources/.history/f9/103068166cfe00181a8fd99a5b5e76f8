#include "P_Audio.h"

void Audio_Init()
{
	//Init the sound library
	mmInitDefaultMem((mm_addr)soundbank_bin);
	//Load module
	mmLoad(SFX_237_SHORT1_STARLIGHT_ASCENDING_0015_PREVIEW);
	//Load effect
}

void Audio_PlayMusic()
{
	//Start playing music in a loop
	mmStart(SFX_237_SHORT1_STARLIGHT_ASCENDING_0015_PREVIEW, MM_PLAY_LOOP);
	//Set module volume to 512 (range 0...1024) using the function mmSetVolume(...)
	mmSetModuleVolume(1024);
}
